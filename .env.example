# =============================================================================
# RunbookPilot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# Environment variables take precedence over config.yml settings.
# =============================================================================

# ---------------------------------------------------------------------------
# General
# ---------------------------------------------------------------------------

# Log level: trace | debug | info | warn | error | fatal
# Default: info
LOG_LEVEL=info

# Path to the SQLite database file
# Default: ./data/runbookpilot.db
RUNBOOKPILOT_DB_PATH=./data/runbookpilot.db

# Comma-separated list of directories to search for playbook definitions
# Default: ./playbooks
PLAYBOOK_DIRS=./playbooks

# Comma-separated list of directories to search for adapter modules
# Default: ./adapters
ADAPTER_DIRS=./adapters

# Automation level: L0 (manual) | L1 (semi-auto) | L2 (simulation-only in v1)
# Default: L0
AUTOMATION_LEVEL=L0

# ---------------------------------------------------------------------------
# OpenRouter (LLM Provider)
# ---------------------------------------------------------------------------

# Base URL for the OpenRouter API
# Default: https://openrouter.ai/api/v1
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# API key for OpenRouter (REQUIRED for LLM enrichment features)
# Get yours at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Model used for fast, low-latency tasks (summaries, quick enrichment)
# Default: openai/gpt-4o-mini
OPENROUTER_MODEL_FAST=openai/gpt-4o-mini

# Model used for standard tasks (analysis, investigation support)
# Default: anthropic/claude-3.5-sonnet
OPENROUTER_MODEL_STANDARD=anthropic/claude-3.5-sonnet

# Model used for high-quality tasks (complex reasoning, report generation)
# Default: anthropic/claude-3-opus
OPENROUTER_MODEL_QUALITY=anthropic/claude-3-opus

# Request timeout in milliseconds
# Default: 30000
OPENROUTER_TIMEOUT=30000

# Maximum tokens in LLM responses
# Default: 4096
OPENROUTER_MAX_TOKENS=4096

# Temperature for LLM responses (0 = deterministic, 2 = maximum creativity)
# Default: 0.1
OPENROUTER_TEMPERATURE=0.1

# Number of retries for failed LLM requests
# Default: 3
OPENROUTER_RETRIES=3

# ---------------------------------------------------------------------------
# Server
# ---------------------------------------------------------------------------

# Port for the RunbookPilot API server
# Default: 3000
SERVER_PORT=3000

# Host/interface for the API server to bind to
# Default: 0.0.0.0
SERVER_HOST=0.0.0.0

# ---------------------------------------------------------------------------
# Execution Limits
# ---------------------------------------------------------------------------

# Timeout in seconds for human approval gates before auto-declining
# Default: 3600 (1 hour)
APPROVAL_TIMEOUT=3600

# Maximum execution time in seconds for a single runbook execution
# Default: 900 (15 minutes)
MAX_EXECUTION_TIME=900
